/* miniprogram/pages/main/main.wxss */
page{height:100%;}
.content{
  font-family: 微软雅黑，宋体;
  font-size: 15px;
  min-height: 736px;
  width: 100%;
  background-size:cover;
  background-image: url(https://s1.ax1x.com/2020/07/11/U1u1rn.jpg);
  background-position-x: -360px;
  color: #fff;
}

.info ,
.future-item{
  padding: 20px;
  background:rgba(0, 0, 0, 0.18);
  box-shadow: 10px 10px 20px rgba(0, 0, 0, 0.2);
  margin: 10rpx;
  border-radius: 8px;
}

.info:active ,
.future-item:active{
  background:rgba(0, 0, 0, 0.3);
}

.today{
  padding-top: 90rpx;
  height: 40%;
}
.city{
  color: white;
  font-size: 18px;
  text-align: right;
  /* margin-right: 10rpx; */
  margin-top: 20rpx;
}
.temp{
  font-size: 53px;
  text-align: center;
}
.weather{
  text-align: center;
  margin: 15px 0 18px 0;
}

.future{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-top: 32px;
  width:200px;
}

.future-item{
  display: flex;
  align-self: auto;
  flex-direction: column;
  text-align: center;
  padding: 16px;
  padding-bottom: 50px;
  width: 27%;
  margin: 3.5px;
  /* display: inline; */
}

.future-item .item{
  padding-bottom: 20px;
}

.future-item .item1{
  padding-bottom: 0;
}

.future-item .rq{
  font-size: 16px;
}

.future-item .wd{
  font-size: 25px;
}

.future-item .tq1{
  font-size:60%;
  line-height: 18px;
}
